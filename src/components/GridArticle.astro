---
import type { Frontmatter } from '../types/types';

interface Props {
  post: Frontmatter;
  url?: string;
}


const { post, url } = Astro.props;
---

<article class="p-2 rounded border-2 border-green-600">
  <a href={url}>
    <img class="w-full" src={post.picture.src} alt={post.picture.alt} />
    <h2 class="text-2xl font-bold py-2 text-center">
      {post.title}
    </h2>
    <p class="text-center">{post.description}</p>
  </a>
  <div>
    {post.tags?.map(tag => { return <a href={`/tags/${tag}`} class="py-1 px-2 rounded bg-blue-500 text-white mx-2">{tag}</a>})}
  </div>
</article>

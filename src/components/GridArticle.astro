const { posts, url } = Astro.props;
---

<article class="p-2 rounded border-2 border-green-600">
  <a href={url}>
    <img class="w-full" src={posts.picture.src} alt={posts.picture.alt} />
    <h2 class="text-2xl font-bold py-2 text-center">
      {posts.title}
    </h2>
    <p class="text-center">{posts.description}</p>
  </a>
</article>
